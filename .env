
# FastAPI application settings

# Database connection URL (PostgreSQL example)
# Make sure to replace with your actual database credentials and host
# Format: postgresql+asyncpg://user:password@host:port/database_name
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/fastapi_db"

# Secret key for JWT token encryption and other security purposes
# Generate a strong, random key for production. Example: openssl rand -hex 32
SECRET_KEY="your-super-secret-key-please-change-me"

# JWT algorithm to use (e.g., HS256, RS256)
ALGORITHM="HS256"

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Debug mode for the application (True/False)
# Set to False in production for security and performance
DEBUG=True

# Example of a log level (INFO, DEBUG, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"
